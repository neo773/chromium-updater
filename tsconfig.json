{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "declaration": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "outDir": "dist"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
